shopt -s dotglob
set -e

# ------------------------------------------------------------------------------------------------

compile_tomcat_download=http://apache.mirrors.pair.com/tomcat/tomcat-7/v7.0.42/bin/apache-tomcat-7.0.42.tar.gz

# ------------------------------------------------------------------------------------------------

compile_build_dir=$1
compile_cache_dir=$2
compile_buildpack_dir=$(cd $(dirname $0) && cd .. && pwd)
compile_buildpack_bin=$compile_buildpack_dir/bin

#echo "pwd: $(pwd)"
#echo "compile_build_dir: $compile_build_dir"
#echo "compile_cache_dir: $compile_cache_dir"
#echo "compile_buildpack_bin: $compile_buildpack_bin"
#echo "compile_buildpack_dir: $compile_buildpack_dir"

# ------------------------------------------------------------------------------------------------

cd $compile_build_dir

# ------------------------------------------------------------------------------------------------

#echo "-----> Doing work with $(basename ${compile_tomcat_download%.tar.gz}) son."
#mkdir -p $compile_cache_dir/public # create /tmp/cache/public
#mv * $compile_cache_dir/public     # mv /tmp/staged/app/* to /tmp/cache/public/
#mv $compile_cache_dir/public .     # mv /tmp/cache/public to /tmp/staged/app/
#[[ -f public/Procfile ]] && mv public/Procfile .

echo "-----> download $(basename ${compile_tomcat_download%.tar.gz}) ."
wget  $compile_tomcat_download
tomcat_name=$(basename $compile_tomcat_download)
tar zxvf $tomcat_name 1>/dev/null
mv ${tomcat_name%.tar.gz} tomcat
rm $tomcat_name



#cp -f $compile_buildpack_dir/conf/nginx.conf nginx/conf/nginx.conf
#cp -f $compile_buildpack_dir/conf/mime.types nginx/conf/mime.types

#[[ -f public/nginx.conf ]] && mv public/nginx.conf nginx/conf/nginx.conf
#[[ -f public/mime.types ]] && mv public/mime.types nginx/conf/mime.types

#echo "-----> Ensuring manifest.yml & stackato.yml aren't availble in public/"
#rm -f public/{manifest,stackato}.yml

# ------------------------------------------------------------------------------------------------
cp $compile_buildpack_bin/boot.sh .
#ls -lah

# ------------------------------------------------------------------------------------------------
